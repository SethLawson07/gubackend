{
  "swagger": "2.0",
  "info": {
    "title": "Simple API overview",
    "version": "v2"
  },
  "tags": [
      {
          "name":"health"
      },
      {
          "name":"auth"
      },
      {
          "name":"category"
      },
      {
          "name":"slider"
      },
      {
          "name":"subcategory"
      },
      {
          "name":"promocode"
      },
      {
          "name":"item"
      },
      {
          "name":"product"
      },
      {
          "name":"order"
      }
  ],
  "securityDefinitions":{
    "Bearer": {
        "type":"apiKey",
        "name":"Authorization",
        "in":"header",
        "description":"JWT auth token"
    }
  },
  "paths":{
      "/health":{
            "get":{
                "summary":"Get server health check",
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"Server is healthy and running"
                    },
                    "500":{
                        "description":"Server is unhealthy"
                    }
                }
            }
      },
      "/auth/register":{
          "post":{
              "tags":["auth"],
              "summary":"Cr√©er un compte en tant qu'utilisateur",
              "produces":["application/json"],
              "consumes":["application/json"],
              "parameters":[
                  {
                      "name":"body",
                      "in":"body",
                      "description":"user details",
                      "required": true,
                      "schema": {
                          "type":"object",
                          "properties": {
                              "email":{
                                  "type":"string",
                                  "description":"email de l'utilisateur",
                                  "example":"jo@gmail.com"
                              },
                              "password":{
                                    "type":"string",
                                    "description":"mot de passe",
                                    "example":"password1234567890"
                              },
                              "phone":{
                                    "type":"string",
                                    "description":"numero de telephone",
                                    "example":"90696969"
                              },
                              "profile_picture":{
                                  "type":"string",
                                  "required": false,
                                  "description":"Lien vers une eventuelle photo de profil",
                                  "example":"https://cloudinary.com/pic.png"
                              }
                          }
                      }
                  }
                                  ],

              "responses":{
                  "201":{
                      "description":"utilisateur enregistre"
                  },
                  "409":{
                      "description":"Conflit: Email ou numero de telephone deja en cours d'utilisation"
                  },
                  "500":{
                      "description":"Une erreur est survenue. Reessayer ou contacter les devs"
                  }
              }
          }
      },
      "/auth/login":{
          "post":{
              "tags":["auth"],
              "summary":"Se connecter",
              "produces":["application/json"],
              "consumes":["application/json"],
              "parameters":[
                  {
                      "name":"body",
                      "in":"body",
                      "description":"user details",
                      "required": true,
                      "schema": {
                          "type":"object",
                          "properties":{
                              "email":{
                                  "type":"string",
                                  "description":"email de l'utilisateur",
                                  "example":"email@gmail.com"
                              },
                              "password":{
                                  "type":"string",
                                  "description":"mot de passe",
                                  "example":""
                              }
                          }
                      }
                  }
              ],
              "responses":{
                  "200":{
                      "description":"Authentification reussie, l'API devrait retourner un token"
                  },
                  "400":{
                      "description":"Mot de passe incorrect"
                  },
                  "404":{
                      "description":"Utilisateur non trouve"
                  },
                  "500":{
                      "description":"Une erreur est survenue. Reessayer ou contacter les devs"
                  }
              }
          }
      },
    "/auth/create_admin":{
        "post":{
            "security":[{ "Bearer":[] }],
            "tags":["auth"],
            "summary":"Creer un compte admin",
            "produces":["application/json"],
            "consumes":["application/json"],
            "parameters":[
                {
                    "name":"body",
                    "in":"body",
                    "required": true,
                    "description":"Admin infos",
                    "schema":{
                        "type":"object",
                        "properties":{
                            "email":{
                                "type":"string",
                            },
                            "password":{
                                "type":"string"
                            }
                        }
                    }
                }
            ],
            "responses":{
                "201":{
                    "description":"Compte admin cree"
                },
                "400":{
                    "description":"parametres non passes ou types incorrects"
                },
                "409":{
                    "description":"Email deja en cours d'utilisation"
                },
                "500":{
                    "description":"Une erreur est survenue. Reessayer ou contacter les devs"
                }
            }
        }
    },
    "/category":{
        "post":{
            "security":[{ "Bearer":[] }],
            "tags":["category"],
            "summary":"Creer une categorie",
            "produces":["application/json"],
            "consumes":["application/json"],
            "parameters":[
                {
                    "name":"body",
                    "in":"body",
                    "description":"Category data",
                    "required": true,
                    "schema":{
                        "type":"object",
                        "properties":{
                            "name":{
                                "type":"string",
                                "description":"Nom de la categorie"
                            },
                            "featured":{
                                "type":"boolean",
                            }
                        }
                    }
                }
            ],
            "responses":{
                "201":{"description":"categorie cree"},
                "400":{"description":"Mauvaise requete, types incorrects ou champs manquants"},
                "409":{"description":"Une categorie porte deja le nom "},
                "500":{"description":"Une erreur est survenue. Reessayer ou contacter les devs"}
            }
        },
        "get":{
            "tags":["category"],
            "summary":"Liste des categories",
            "produces":["application/json"],
            "responses":{
                "200":{
                    "description":"Donnees retournees"
                },
                "500":{
                    "description":"Une erreur est survenue. Reessayer ou contacter les devs"
                }
            }
        },
        "put":{
            "security":[{ "Bearer":[] }],
            "tags":["category"],
            "summary":"Modifier une categorie",
            "produces":["application/json"],
            "consumes":["application/json"],
            "parameters":[
                {
                    "name":"body",
                    "in":"body",
                    "required": true,
                    "schema":{
                        "type":"object",
                        "properties":{
                            "id":{"type":"string"},
                            "name":{"type":"string"},
                            "featured":{"type":"boolean"}
                        }
                    }
                }
            ],
            "responses":{
                "200":{"description":"categorie mise a jour"},
                "400":{"description":"Mauvaise requete, types incorrects ou champ id manquant"},
                "404":{"description":"categorie non trouvee"},
                "409":{"description":"duplicat, une categorie porte deja le meme nom"},
                "500":{"description":"Une erreur est survenue...."}
            }
        },
        "delete":{
            "security":[{ "Bearer":[] }],
            "tags":["category"],
            "summary":"Supprimer une categorie",
            "produces":["application/json"],
            "consumes":["application/json"],
            "parameters":[
                {
                    "name":"body",
                    "in":"body",
                    "required": true,
                    "schema":{
                        "type":"object",
                        "properties":{
                            "id":{"type":"string"}
                        }
                    }
                }
            ],
            "responses":{
                "200":{"description":"categorie supprimee"},
                "404":{"description":"categorie non trouvee"},
                "500":{"description":"Une erreur est survenue...."}
            }
        }
    },
    "/slider":{
        "post":{
            "summary":"Creer un slider",
            "security":[],
            "produces":["application/json"],
            "consumes":["application/json"],
            "parameters":[
                {
                    "name":"body",
                    "in":"body",
                    "required": true,
                    "schema":{
                        "type":"object",
                        "properties":{
                            "big_text":{"type":"string"},
                            "alt_text":{"type":"string"},
                            "featured":{"type":"boolean"}
                        }
                    }
                }
            ],
            "responses":{
                "201":{"description":"Slider cree"},
                "400":{"description":"Mauvaise requete: champs manquants ou types invalides"},
                "500":{"description":"Une erreur est survenue......."}
            }
        },
        "get":{
            "summary":"Recevoir la liste des sliders",
            "produces":["application/json"],
            "responses":{
                "200":{"description":"Liste des sliders renvoyee"},
                "500":{"description":"Une erreur est survenue....."}
            }
        }
    },
    "/subcategory":{},
    "/item":{},
    "/product":{},
    "/promocode":{},
    "/pay":{}
  }
}
