{
  "swagger": "2.0",
  "info": {
    "title": "Simple API overview",
    "version": "v2"
  },
  "tags": [
      {
          "name":"health",
          "description":"Server health"
      },
      {
          "name":"auth",
          "description":"Authentication"
      }
  ],
  "paths":{
      "/health":{
            "get":{
                "summary":"Get server health check",
                "produces":["application/json"],
                "responses":{
                    "200":{
                        "description":"Server is healthy and running"
                    },
                    "500":{
                        "description":"Server is unhealthy"
                    }
                }
            }
      },
      "/auth/register":{
          "post":{
              "tags":["auth"]
              "summary":"Cr√©er un compte en tant qu'utilisateur",
              "produces":["application/json"],
              "consumes":["application/json"],
              "parameters":[
                  {
                      "name":"body",
                      "in":"body",
                      "description":"user details",
                      "required": true,
                      "schema": {
                          "type":"object",
                          "properties": {
                              "email":{
                                  "type":"string",
                                  "description":"email de l'utilisateur",
                                  "example":"jo@gmail.com"
                              },
                              "password":{
                                    "type":"string",
                                    "description":"mot de passe",
                                    "example":"password1234567890"
                              },
                              "phone":{
                                    "type":"string",
                                    "description":"numero de telephone",
                                    "example":"90696969"
                              },
                              "profile_picture":{
                                  "type":"string",
                                  "required": false,
                                  "description":"Lien vers une eventuelle photo de profil",
                                  "example":"https://cloudinary.com/pic.png"
                              }
                          }
                      }
                  }
                                  ],

              "responses":{
                  "201":{
                      "description":"utilisateur enregistre"
                  },
                  "409":{
                      "description":"Conflit: Email ou numero de telephone deja en cours d'utilisation"
                  },
                  "500":{
                      "description":"Une erreur est survenue. Reessayer ou contacter les devs"
                  }
              }
          }
      },
      "/auth/login":{
          "post":{
              "tags":["auth"],
              "summary":"Se connecter",
              "produces":["application/json"],
              "consumes":["application/json"],
              "parameters":[
                  {
                      "name":"body",
                      "in":"body",
                      "description":"user details",
                      "required": true,
                      "schema": {
                          "type":"object",
                          "properties":{
                              "email":{
                                  "type":"string",
                                  "description":"email de l'utilisateur",
                                  "example":"email@gmail.com"
                              },
                              "password":{
                                  "type":"string",
                                  "description":"mot de passe",
                                  "example":""
                              }
                          }
                      }
                  }
              ],
              "responses":{
                  "200":{
                      "description":"Authentification reussie, l'API devrait retourner un token"
                  },
                  "400":{
                      "description":"Mot de passe incorrect"
                  },
                  "404":{
                      "description":"Utilisateur non trouve"
                  },
                  "500":{
                      "description":"Une erreur est survenue. Reessayer ou contacter les devs"
                  }
              }
          }
      },
    "/auth/create_admin":{
        "post":{
            "tags":["auth"],
            "summary":"Creer un compte admin",
            "produces":["application/json"],
            "consumes":["application/json"]
        }
    }
  }
}
